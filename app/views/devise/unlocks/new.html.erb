<div class="page-header">
  <h2><%= t '.resend_unlock'%></h2>
</div>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, :class => 'control-label' %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit t('resend_unlock_instructions'), :class => 'btn btn-primary' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

